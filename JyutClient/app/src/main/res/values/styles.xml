<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Black">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.Black.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.Black.NoActionBar.Translucent">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="editTextColor">@color/white</item>
        <item name="spinnerStyle">@android:style/Widget.Spinner.DropDown</item>
    </style>
    <style name="AppTheme.NoActionBar.Black.Translucent.Fullscreen">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="Theme.Holo.NoActionBar.Translucent" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.Holo.NoActionBar.Translucent.Fullscreen">
        <item name="android:windowFullscreen">true</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Button">

    </style>
    <style name="Button.Press" >
        <item name="android:background">@drawable/selector_transparent_half</item>
    </style>
    <style name="Button.Press.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Button.Press.dp50">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="Button.Press.actionBarSize">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>
    <style name="Button.Press.Wrap.Green">
        <item name="android:background">@drawable/selector_green</item>
    </style>

    <style name="TextInput.Wrap" parent="WrapContent.WidthMatchParent"/>
    <style name="TextInput.Wrap.Padding">
        <item name="android:paddingLeft">@dimen/dp_50</item>
        <item name="android:paddingRight">@dimen/dp_50</item>
    </style>

    <style name="TextView.Wrap" parent="WrapContent"/>
    <style name="TextView.Wrap.Size20">
        <item name="android:textSize">@dimen/dp_20</item>
    </style>
    <style name="TextView.Match.Size20.White" parent="TextView.Wrap.Size20.White">
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TextView.Wrap.Size20.White">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
